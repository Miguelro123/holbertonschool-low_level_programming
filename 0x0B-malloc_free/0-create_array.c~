#include "holberton.h"
#include <stdlib.h>
/**
 * create_array - creates an array of chars
 * @size: int type
 * @c: Char type
 * Return: a pointer to the array, or NULL if it fails
 */
char *create_array(unsigned int size, char c)
{
	char *m;
	unsigned int i;

	if (size == 0)
	{
		return (NULL);
	}

	m = malloc(sizeof(c) * size);

	if (m == NULL)
	{
		return (NULL);
	}
	for (i = 0
	{
		m[i] = c;
	}

		     return (m);
}
